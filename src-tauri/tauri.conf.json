{
  "$schema": "https://schema.tauri.app/config/2",
  "productName": "snowflake",
  "version": "0.2.0",
  "identifier": "com.snowflake.app",
  "build": {
    "beforeDevCommand": "pnpm dev",
    "devUrl": "http://localhost:1420",
    "beforeBuildCommand": "pnpm build",
    "frontendDist": "../dist"
  },
  "app": {
    "windows": [
      {
        "title": "Snowflake",
        "width": 1200,
        "height": 800,
        "center": true
      }
    ],
    "security": {
      "csp": null
    }
  },
  "bundle": {
    "active": true,
    "targets": "all",
    "icon": [
      "icons/snowflake.png",
      "icons/snowflake.svg",
      "icons/snowflake.ico"
    ]
  }
}
