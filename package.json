    "typescript": "~5.6.2",
    "vfonts": "^0.0.3",
    "vite": "^6.0.5",
    "vitepress": "^1.6.3",
    "vitepress-plugin-mermaid": "^2.0.17",
    "vitest": "^3.0.4",
    "vue-tsc": "^2.1.10"
  },
  "simple-git-hooks": {
    "commit-msg": "echo 'üîç Checking commit message...' && npx --no -- commitlint --edit ${1} && echo '‚úÖ Commit message is valid'",
    "pre-push": "echo 'üöÄ Running pre-push checks...' && pnpm pre-push && echo '‚úÖ Pre-push checks passed'"
  }
