{
  "name": "snowflake",
  "private": true,
  "version": "0.2.0",
  "type": "module",
  "scripts": {
    "dev": "vite",
    "dev:web": "vite --mode web",
    "dev:desktop": "tauri dev",
    "type-check": "vue-tsc --noEmit",
    "lint:types": "vue-tsc --noEmit --pretty",
    "build": "pnpm type-check && vite build",
    "build:web": "pnpm type-check && vite build --mode web",
    "build:desktop": "pnpm type-check && vite build --mode desktop && tauri build",
    "preview": "vite preview",
    "preview:web": "vite preview --outDir web-dist",
    "tauri": "tauri",
    "test": "vitest",
    "test:coverage": "vitest run --coverage",
    "test:ui": "vitest --ui",
    "pre-push": "pnpm type-check && pnpm test run && pnpm docs:build",
    "docs:dev": "vitepress dev docs",
    "docs:build": "vitepress build docs",
    "docs:preview": "vitepress preview docs",
    "prepare": "npx simple-git-hooks"
  },
  "dependencies": {
    "@tauri-apps/api": "^2",
    "@tauri-apps/plugin-dialog": "~2",
    "@tauri-apps/plugin-fs": "~2",
    "@tauri-apps/plugin-opener": "^2",
    "@tauri-apps/plugin-os": "~2",
    "@tauri-apps/plugin-store": "~2.2.0",
    "konva": "^9.3.18",
    "pinia": "^2.3.0",
    "uuid": "^11.0.5",
    "v-network-graph": "^0.9.18",
    "vue": "^3.5.13",
    "vue-i18n": "^10.0.5",
    "vue-konva": "^3.2.0",
    "vue-router": "^4.5.0"
  },
  "devDependencies": {
    "@braintree/sanitize-url": "^7.1.1",
    "@commitlint/cli": "^19.6.1",
    "@commitlint/config-conventional": "^19.6.0",
    "@intlify/unplugin-vue-i18n": "^6.0.2",
    "@tauri-apps/cli": "^2",
    "@types/node": "^22.10.2",
    "@vicons/fluent": "^0.12.0",
    "@vicons/material": "^0.13.0",
    "@vicons/tabler": "^0.13.0",
    "@vicons/utils": "^0.1.4",
    "@vitejs/plugin-vue": "^5.2.1",
    "cytoscape": "^3.31.0",
    "cytoscape-cose-bilkent": "^4.1.0",
    "dayjs": "^1.11.13",
    "debug": "^4.4.0",
    "mermaid": "^11.4.1",
    "naive-ui": "^2.40.3",
    "prettier": "^3.4.2",
    "simple-git-hooks": "^2.11.1",
    "typescript": "~5.6.2",
    "vfonts": "^0.0.3",
    "vite": "^6.0.5",
    "vitepress": "^1.6.3",
    "vitest": "^3.0.4",
    "vue-tsc": "^2.1.10"
  },
  "simple-git-hooks": {
    "commit-msg": "npx --no -- commitlint --edit ${1}",
    "pre-push": "pnpm pre-push"
  }
}
